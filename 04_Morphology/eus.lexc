LEXICON I_N

%<n%>: CASEII ;

LEXICON CASEII

%<indef%>: # ; ! "indefinite"
%<def%>%<sing%>:%>%{a%} # ; ! "definite singular"
%<def%>%<pl%>:%>%{a%}k # ; ! "definite plural"

%<ine%>:%>%{a%}n # ; ! "spatial or temporal location (in, at, on)"
%<ela%>:%>tik # ; ! "source of motion (from, since, out of)"
%<all%>:%>ra # ; ! "goal of motion (to)"
%<ter%>:%>raino # ; ! "termination (as far as, up to, until)"
%<dir%>:%>rantz # ; ! "direction of motion (toward)"
%<lgen%>:%>%{a%}rena # ; ! "pertaining to where/when: 'of', 'from'"
%<dest%>:%>rako # ; ! "inanimate destination ('for' a thing)"
%<igen%>:%>ko # ; ! "genitives in (some) inanimates"


LEXICON INANIMATE_NOUNS

