Multichar_Symbols

%>              ! Morpheme boundary
%<n%>           ! Noun
%<indef%>       ! Indefinite
%<def%>         ! Definite
%<sing%>        ! Singular
%<pl%>          ! Plural
!Animate definite plural
%<abs%>         ! Absolutive
%<erg%>         ! Ergative 
%<dat%>         ! Dative 
%<gen%>         ! Genitive 
%<inst%>        ! Instrumental
%<com%>         ! Comitative 
%<ben%>         ! Benefactive
%<csl%>         ! Causal 
!Inanimate definite singular
%<ine%>         ! Inessive 
%<ela%>         ! Elative 
%<all%>         ! Allative 
%<ter%>         ! Terminal
%<dir%>         ! Directional
%<lgen%>        ! Local genitive
%<dest%>        ! Destinative
%<igen%>        ! Inanimate genitive
!Archicharacters
%{a%}           ! Archivowel 'a'
%{e%}           ! Archivowel 'e'
%{r%}           ! Archicharacter 'r'


LEXICON Root

INANIMATE_NOUNS ;
ANIMATE_NOUNS ;



LEXICON A_N

%<n%>: CASEI ;

LEXICON CASEI

%<indef%>: # ; ! "indefinite"
%<def%>%<sing%>:%>%{r%}%{a%} # ; ! "definite singular"
%<def%>%<pl%>:%>%{r%}%{a%}k # ; ! "definite plural"

%<abs%>: # ; ! "intransitive subject, transitive direct object" 
%<erg%>:%>%{r%}%{e%}k # ; ! "transitive subject"
%<dat%>:%>%{r%}%{e%}i # ; ! "indirect object (to, for)"
%<gen%>:%>%{r%}en # ; ! "possession (of, 's)"
%<inst%>:%>%{e%}z # ; ! "means or topic (with, by, about)"
%<com%>:%>%{r%}ekin # ; ! "accompaniment or means (with)"
%<ben%>:%>%{r%}entzat # ; ! "beneficiary (for)"
%<csl%>:%>%{r%}engatik # ; ! "cause, reason (because of, for)"

LEXICON ANIMATE_NOUNS

